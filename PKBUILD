pkgname=rt
pkgver=1.0.0
pkgrel=1
pkgdesc="rt - root, das it"
arch=('x86_64')
url="https://github.com/theoddcell/rt"
license=('MIT')
depends=()
makedepends=('gcc')
source=('rt.c')
sha256sums=('SKIP')

build() {
  cd "$srcdir"
  gcc -O2 -pipe -Wall -Wextra -std=gnu11 -o rt rt.c
}

package() {
  cd "$srcdir"
  install -Dm 4750 rt "$pkgdir/usr/local/sbin/rt"
  chown root:wheel "$pkgdir/usr/local/sbin/rt"
}
